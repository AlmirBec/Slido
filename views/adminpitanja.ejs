<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Latest compiled and minified CSS -->
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <div class="adminlo">
    <form action="/admin/logout">
      <button class="btn btn-danger">Log out</button>
    </form>
  </div>

    <div class="row container-fluid mt-3">
      <div class="col-3 bg-info">
        <form action="/admin/predavac">
          <button class="btn btn-dark">Predavac</button>
        </form>
      </div>
      <div class="col-3 bg-info">
        <form action="/admin/predavanje">
          <button class="btn btn-dark">Predavanje</button>
        </form>
      </div>
      <div class="col-3 bg-info">
        <form action="/admin/pitanja">
          <button class="btn btn-dark">Pitanja</button>
        </form>
      </div>
      <div class="col-3 bg-info">
        <form action="/admin/vulgarizmi">
          <button class="btn btn-dark">Vulgarizmi</button>
        </form>
      </div>

    </div>
    <div class="table-responsive">
    <table class="table table-sm table-hover">
      <caption class="caption-top mt-4">Lista pitanja</caption>

      <tr>
        <th>ID</th>
        <th>KOD PREDAVANJA</th>
        <th>TEKST</th>
        <th>BROJ LAJKOVA</th>
        <th>ODGOVORENO</th>
        <th>SAKRIVENO</th>
      </tr>
      <%for(let i = 0; i < pitanja.length; i++){%>
      <tr>
        <td><%=pitanja[i].id%></td>
        <td><%=pitanja[i].kod_predavanja%></td>
        <td><%=pitanja[i].tekst%></td>
        <td><%=pitanja[i].broj_lajkova%></td>
        <td><%=pitanja[i].odgovoreno%></td>
        <td><%=pitanja[i].sakriveno%></td>
        <td>
          <form action="/admin/pitanja/obrisi/<%=pitanja[i].id%>">
          <button>DELETE</button>
          </form>
        </td>

      </tr>

      <%}%>
    </table>
    </div>
  </body>
</html>
